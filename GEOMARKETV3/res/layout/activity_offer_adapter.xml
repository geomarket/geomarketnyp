<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferAdapter" >
    

	<ImageView
        android:id="@+id/imgIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subtitle"
        android:paddingLeft="10dp"
        android:background="#CCFFFFFF"/>
    
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/salePrice"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:background="#CCFFFFFF" />
    
    <TextView
        android:id="@+id/salePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/imgIV"/>
    <TextView
        android:id="@+id/salePercentageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:paddingTop="13dp"
        android:layout_toRightOf="@+id/salePrice"
        android:layout_below="@+id/imgIV"
        android:text="Discount:" />
    <TextView
        android:id="@+id/salePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130dp"
        android:paddingTop="3dp"
        android:paddingBottom="8dp"
        android:layout_toRightOf="@+id/salePrice"
        android:layout_below="@+id/salePercentageTitle" />
    
    <TextView
        android:id="@+id/viewCountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/salePercentageTitle"
        android:layout_below="@+id/imgIV"
        android:text="View:" />
    
    <TextView
        android:id="@+id/broughtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingLeft="33dp"
        android:paddingBottom="8dp"
        android:layout_toRightOf="@+id/salePercentage"
        android:layout_below="@+id/viewCountTitle"
        android:text="0" />

</RelativeLayout>
