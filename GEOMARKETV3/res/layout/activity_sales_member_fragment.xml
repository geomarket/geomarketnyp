<RelativeLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
<ScrollView
    	android:id="@+id/scroll"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/llviewoffer"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">
    
     <RelativeLayout
         android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rlIM">
        
       <ImageView
        android:id="@+id/imgIV"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        android:contentDescription="Image" />
     </RelativeLayout>
         
         
         
    <RelativeLayout
        android:id="@+id/rlPersonal" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin">
 
    
    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Title:" />
   
    <TextView
        android:id="@+id/sloganTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTV"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="slogan" />
    </RelativeLayout>
    	
    
    <RelativeLayout
        android:id="@+id/rlG"
        android:layout_marginTop="5dp"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin">
	<TextView
        android:id="@+id/salePersonTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
       	android:textStyle="bold"
        android:text="Sale Person detail:" />
         <View
	    android:id="@+id/view1"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/salePersonTV"
    android:background="@android:color/darker_gray"/>
         
	<TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_below="@+id/view1"
        android:text="name"
         />
        
    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:layout_below="@+id/nameTV" />
        
    </RelativeLayout>
</LinearLayout>
</ScrollView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="#CCFFFFFF"
    android:weightSum="1"
   	android:layout_alignBottom="@+id/scroll"
    android:id="@+id/rlbuy">

    <com.beardedhen.androidbootstrap.BootstrapButton
          		 android:id="@+id/GoBtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
    			android:paddingRight="@dimen/activity_horizontal_margin"
    			android:paddingTop="@dimen/activity_horizontal_margin"
    			android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="Get There!!"
                bootstrapbutton:bb_icon_left="fa-sign-in"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_type="primary" />
</RelativeLayout>
</RelativeLayout>